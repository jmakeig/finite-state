{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/jmakeig/markdown-annotations",
  "definitions": {
    "range": {
      "type": "object",
      "properties": {
        "start": {
          "type": "object",
          "properties": {
            "line": {
              "type": "integer",
              "title": "Line number, one-based",
              "default": 0
            },
            "column": {
              "type": "integer",
              "title": "Column number, one-based",
              "default": 0
            }
          }
        },
        "end": {
          "type": "object",
          "properties": {
            "line": {
              "type": "integer",
              "title": "Line number, one-based",
              "default": 0
            },
            "column": {
              "type": "integer",
              "title": "Column number, one-based",
              "default": 0
            }
          }
        }
      },
      "additionalProperties": false
    }
  },
  "type": "object",
  "properties": {
    "ui": {
      "type": "object",
      "properties": {
        "user": {
          "type": "string",
          "title": "Username of the current user or null for unauthenticated",
          "default": "null",
          "examples": ["dsmalls"]
        },
        "currentSelection": {
          "$ref": "#/definitions/range"
        },
        "activeAnnotationID": {
          "type": "string",
          "title": "The Activeannotationid Schema ",
          "default": "",
          "examples": ["af4bbe2a-e88b-4ca6-bf9a-58eee6a1a742"]
        }
      },
      "additionalProperties": false
    },
    "model": {
      "type": "object",
      "properties": {
        "content": {
          "type": "string",
          "title": "The Content Schema ",
          "default": "",
          "examples": ["# Hello, world!\n\nIpsum lorem _dolor_ sic amentâ€¦"]
        },
        "href": {
          "type": "string",
          "title": "The Href Schema ",
          "default": "",
          "examples": ["PM offsite, 2018-06-14.md"]
        },
        "annotations": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "title": "The Id Schema ",
                "default": "",
                "examples": ["af4bbe2a-e88b-4ca6-bf9a-58eee6a1a742"]
              },
              "timestamp": {
                "type": "string",
                "title": "The Timestamp Schema ",
                "default": "",
                "examples": ["2018-07-13T23:20:35.732Z"]
              },
              "user": {
                "type": "string",
                "title": "The User Schema ",
                "default": "",
                "examples": ["jmakeig"]
              },
              "comment": {
                "type": "string",
                "title": "The Comment Schema ",
                "default": "",
                "examples": ["asdfasd"]
              },
              "range": {
                "$ref": "#/definitions/range"
              }
            }
          }
        },
        "mime": {
          "type": "string",
          "title": "The Mime Schema ",
          "default": "",
          "examples": ["text/markdown"]
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
